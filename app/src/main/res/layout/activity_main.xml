<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dipto.tablayout.MainActivity">

    <Button
        android:id="@+id/texttab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text tab"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/scrolltab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="scroll tab"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/texttab"/>

    <Button
        android:id="@+id/icon_text_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Icon with Text"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/scrolltab"/>

    <Button
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bottom tab"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/icon_text_tab"/>

</RelativeLayout>
